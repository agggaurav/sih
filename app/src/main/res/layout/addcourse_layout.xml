<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:text="Add Course"
           android:textAlignment="center"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:text="Course Name: "/>
           <EditText
               android:layout_width="200dp"
               android:layout_height="50dp"
               android:id="@+id/courseName"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:text="Category: "/>
           <EditText
               android:layout_width="200dp"
               android:layout_height="50dp"
               android:id="@+id/category"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Description"/>
                 </LinearLayout>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:id="@+id/desc"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <RadioGroup
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/mode">
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Online"/>
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Offline"/>
           </RadioGroup>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/checkmode"
           android:orientation="vertical">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Add Module"
               android:id="@+id/addmodule"/>

           <Spinner android:id="@+id/Spinner01"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       </LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:id="@+id/moduleinfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Module Name"/>

        <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
            android:layout_margin="5dp"
        android:id="@+id/modulename"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Module Description"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/moduledesc"/>
    </LinearLayout>


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="50dp"
                   android:text="Video URL"/>

               <EditText
                   android:layout_width="200dp"
                   android:layout_height="50dp"
                   android:id="@+id/videourl"/>
           </LinearLayout>
    <Button
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="ADD"
        android:id="@+id/insertmodule"
    />

    </LinearLayout>
       </LinearLayout>





       <android.support.design.widget.FloatingActionButton
           android:id="@+id/addcourse"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/fab_margin"
           android:text="SUBMIT"
           android:layout_gravity="center"
           android:layout_weight="6.06"
           android:layout_alignParentBottom="true"

           />



   </LinearLayout>




</ScrollView>